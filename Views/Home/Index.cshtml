@{
    ViewData["Title"] = "Weighz Cal";
}

<div class="container">
    <h1>Material Weight Calculator</h1>
    <p class="description">Enter the density, length, width, and height to calculate material weight. You can select dimensions in millimeters (mm) or meters (m).</p>

    <form id="weightCalculatorForm">
        <div class="form-group">
            <label for="density">Density (kg/m³):</label>
            <input type="number" id="density" name="density" placeholder="Enter density" required>
        </div>

        <div class="form-group">
            <label for="unit">Select Unit:</label>
            <select id="unit" name="unit" required>
                <option value="m">Meters (m)</option>
                <option value="mm">Millimeters (mm)</option>
            </select>
        </div>

        <div class="form-group">
            <label for="length">Length:</label>
            <input type="number" id="length" name="length" placeholder="Enter length" required>
        </div>

        <div class="form-group">
            <label for="width">Width:</label>
            <input type="number" id="width" name="width" placeholder="Enter width" required>
        </div>

        <div class="form-group">
            <label for="height">Height:</label>
            <input type="number" id="height" name="height" placeholder="Enter height" required>
        </div>

        <button type="button" class="btn" onclick="calculateWeight()">Calculate Weight</button>
        <button type="button" class="btn-secondary" onclick="viewMaterialDensities()">View Common Densities</button>

        <div id="result" class="result">
            <h3>Weight: <span id="weightResult">0</span> kg</h3>
            <p>Volume in m³: <span id="volumeMResult">0</span> m³</p>
            <p>Volume in mm³: <span id="volumeMMResult">0</span> mm³</p>
        </div>

        <div id="densityTable" class="density-table" style="display: none;">
            <h3>Common Material Densities (kg/m³)</h3>
            <table>
                <thead>
                    <tr>
                        <th>Material</th>
                        <th>Density</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Steel</td>
                        <td>7850</td>
                    </tr>
                    <tr>
                        <td>Aluminum</td>
                        <td>2700</td>
                    </tr>
                    <tr>
                        <td>Concrete</td>
                        <td>2400</td>
                    </tr>
                    <!-- Add more materials if necessary -->
                </tbody>
            </table>
        </div>

        <div class="external-density-link">
            <h3>Need More Material Densities?</h3>
            <p>Click the button below to view a comprehensive list of material densities available across the world.</p>
            <a href="https://www.engineeringtoolbox.com/density-materials-d_1652.html" target="_blank">
                <button type="button" class="btn-secondary">View Complete Material Densities</button>
            </a>
        </div>
    </form>
</div>

<script src="~/js/app.js"></script>
